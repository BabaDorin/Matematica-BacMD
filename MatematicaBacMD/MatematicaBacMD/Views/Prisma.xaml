                <Label Style="{StaticResource Info}" Text="Suma ariilor fe&#539;elor laterale ale unei prisme se nume&#351;te aria lateral&#259; a prismei. "/>
                <Label Style="{StaticResource Info}" Text="Dac&#259; not&#259;m cu " Margin="0,10,0,0"/>
                <ffimageloading:CachedImage
                        Margin="10"   
                        WidthRequest="300"
                        HeightRequest ="31"
                        Aspect="Fill"
                    BitmapOptimizations="True"
                        HorizontalOptions="Center" 
                        VerticalOptions="Center"
                    Source="i158.jpg"/>
                <Label Style="{StaticResource Info}" Text="respectiv aria total&#259;, aria lateral&#259; &#351;i aria unei baze a prismei, atunci"/>
                <ffimageloading:CachedImage
                        Margin="10"   
                        WidthRequest="300"
                        HeightRequest ="50"
                        Aspect="Fill"
                    BitmapOptimizations="True"
                        HorizontalOptions="Center" 
                        VerticalOptions="Center"
                    Source="i159.jpg"/>
                <Label Style="{StaticResource Info}" Text="&#10;O prism&#259; se nume&#351;te prism&#259; dreapt&#259; dac&#259; muchiile ei laterale sunt perpendiculare pe baze "/>
                <Label Style="{StaticResource Info}" Text="O prism&#259; se nume&#351;te prism&#259; oblic&#259; dac&#259; muchiile ei laterale nu sunt perpendiculare pe baze "/>
                <ffimageloading:CachedImage
                        Margin="10"   
                        WidthRequest="300"
                        HeightRequest ="347"
                        Aspect="Fill"
                    BitmapOptimizations="True"
                        HorizontalOptions="Center" 
                        VerticalOptions="Center"
                    Source="i160.jpg"/>
                <Label Style="{StaticResource Info}" Text="Prisma dreapt&#259; a c&#259;rei baz&#259; este un poligon regulat se nume&#351;te prism&#259; regulat&#259;. "/>
                <Label Style="{StaticResource Info}" Text=""/>
                <Label Style="{StaticResource Info}" Text="O prism&#259; se nume&#351;te paralelipiped dac&#259; baza ei este un paralelogram. "/>
                <Label Style="{StaticResource Info}" Text=""/>
                <Label Style="{StaticResource Info}" Text="Paralelipipedul drept a c&#259;rui baz&#259; este un dreptunghi se nume&#351;te paralelipiped dreptunghic."/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>