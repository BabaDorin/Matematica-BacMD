                        WidthRequest="300"
                        HeightRequest="64"
                        HorizontalOptions="Center" 
                        VerticalOptions="Center"
                        BitmapOptimizations="True"
                        Source="i54.jpg"/>
                <BoxView HeightRequest="1" BackgroundColor="White"/>
